
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="~/Views/Account/ChangePassword.js"></script>
}
<form name="ChangePasswordForm" role="form" novalidate class="form-validation" id="form-wrapper">
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane animated fadeIn active">
            <div class="row clearfix" style="margin-top:10px; margin-bottom:10px;">
                <div class="col-sm-12">
                    <h4 style="font-weight:bold">Đổi mật khẩu:</h4>
                </div>
            </div>
            <div class="row clearfix" style="margin-top:20px;">
                <div class="col-sm-10">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="password" name="OldPassword" value="" maxlength="16" class="validate form-control">
                            <i class="fa fa-eye" style="cursor: pointer;"></i>
                            <label class="form-label">Mật khẩu hiện tại</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="password" name="NewPassword" id="newpassword" maxlength="16" value="" class="validate form-control">
                            <i class="fa fa-eye" style="cursor: pointer;"></i>
                            <label class="form-label">Mật khẩu mới</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="password" name="ConfirmPassword" value="" maxlength="16" class="validate form-control">
                            <i class="fa fa-eye" style="cursor: pointer;"></i>
                            <label class="form-label">Nhập lại mật khẩu mới</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix" style="margin-top:15px;">
                <button type="button" class="btn-success submit"> Thay đổi</button>
            </div>
        </div>
    </div>
</form>

