                <path d="M17.5,54h24c0.552,0,1-0.447,1-1s-0.448-1-1-1h-24c-0.552,0-1,0.447-1,1S16.948,54,17.5,54z" />
                <path d="M17.5,49h24c0.552,0,1-0.447,1-1s-0.448-1-1-1h-24c-0.552,0-1,0.447-1,1S16.948,49,17.5,49z" />
                <path d="M17.5,44h24c0.552,0,1-0.447,1-1s-0.448-1-1-1h-24c-0.552,0-1,0.447-1,1S16.948,44,17.5,44z" />
                </g>
                </svg> Xóa dòng
            </div>
            <table class="table" id="tblPositionQuota">
                <thead>
                    <tr>
                        <th scope="col">
                            <input id="checkbox-all" type="checkbox" name="Checkbox" value="" class="form-control" />
                            <label for="checkbox-all" class="btn-checkbox"></label>
                        </th>
                        <th scope="col">STT</th>
                        <th scope="col">Phân loại sách</th>
                        <th scope="col">Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Position.Id > 0 && Model.ListPositionQuotas.Any())
                    {
                        int i = 0;
                        foreach (var quota in Model.ListPositionQuotas)
                        {
                            <tr data-id="@quota.Id">
                                <th scope="row">
                                    <input id="checkbox-@i" type="checkbox" name="Checkbox" value="" class="form-control" />
                                    <label for="checkbox-@i" class="btn-checkbox"></label>
                                </th>
                                <td class="stt">@(i+1)</td>
                                <td>
                                    <select class="selectpicker show-tick form-control" data-width="100%" width="auto" data-live-search="true" name="BookClassifyId">
                                        <option value="">-- Chọn phân loại sách --</option>
                                        @foreach (var item in Model.ListBookClassify)
                                        {
                                            <option value="@item.Id" @(quota.BookClassifyId == item.Id ? "selected" : "")>@item.Name</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <input id="amount" type="number" name="Amount" value="@quota.Amount" class="form-control" />
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr data-id="0">
                            <th scope="row">
                                <input id="checkbox" type="checkbox" name="Checkbox" value="" class="form-control" />
                                <label for="checkbox" class="btn-checkbox"></label>
                            </th>
                            <td class="stt">1</td>
                            <td>
                                <select class="selectpicker show-tick form-control" data-width="100%" width="auto" data-live-search="true" name="BookClassifyId">
                                    <option value="">-- Chọn phân loại sách --</option>
                                    @foreach (var item in Model.ListBookClassify)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </td>
                            <td>
                                <input id="amount" type="number" name="Amount" value="0" class="form-control" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="add-row cursor-pointer">Thêm định mức</a>
        </div>
    </div>
</form>
