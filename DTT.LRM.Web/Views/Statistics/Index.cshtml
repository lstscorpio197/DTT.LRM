@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions

@model DTT.LRM.Web.Models.Statistics.IndexModel
@{
    ViewBag.ActiveMenu = PageNames.Statistics; //The menu item will be active for this page.
}

@section scripts
{
    @Html.IncludeScript("~/Views/Statistics/Index.js")
}

<div id="table-wrapper">
    <div class="mb-2 d-flex align-items-center justify-content-between">
        <div class="">
            <button type="button" class="exportexcel"><i class="fa fa-file-excel-o">Xuất excel</i></button>
        </div>
        <div class="btn btn-primary btnStatistic">
            <a class="link-default" href="#">Thống kê</a>
        </div>

    </div>

    <div class="row" style="margin-top:50px;">
        <div class="col-sm-4">
            <div class="form-group form-float">
                <div class="form-line focused">
                    <input type="date" name="DateStart" value="" class="validate form-control">
                    <label class="form-label">Ngày đầu</label>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group form-float">
                <div class="form-line focused">
                    <input type="date" name="DateEnd" value="" class="validate form-control">
                    <label class="form-label">Ngày cuối</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group form-float">
                <div class="form-line focused">
                    <select name="BookClassifyId">
                        <option value="-1">-- Phân loại sách --</option>
                        @foreach (var item in Model.ListBookClassifies)
                        {
                            <option value="@item.Id"> @item.Name </option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group form-float">
                <div class="form-line focused">
                    <select name="BookFieldId">
                        <option value="-1">-- Lĩnh vực sách --</option>
                        @foreach (var item in Model.ListBookFields)
                        {
                            <option value="@item.Id"> @item.Name </option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
    <table class="table data-table" id="myTable">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Loại sách</th>
                <th scope="col">Tổng số</th>
                <th scope="col">Thanh lý</th>
                <th scope="col">Bị mất</th>
                <th scope="col">Số lần mượn</th>
                <th scope="col">Số lần trả</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>