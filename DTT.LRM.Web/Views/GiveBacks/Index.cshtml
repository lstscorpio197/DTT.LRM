@using Abp.Web.Mvc.Extensions
@using DTT.LRM.Authorization
@{
    ViewBag.ActiveMenu = PageNames.GiveBacks; //The menu item will be active for this page.
}
@section scripts
{
    @Html.IncludeScript("~/Views/GiveBacks/Index.js")
}

@{
    var isCanCreate = IsGranted(PermissionNames.Pages_Borrows_Create);
}
<div id="table-wrapper">
    <div class="mb-2 d-flex align-items-center justify-content-between">
        <h4>
            Danh sách trả sách
        </h4>
        @if (isCanCreate)
        {
            <div class="btn btn-primary">
                <a class="link-default" href="~/GiveBacks/CreateOrUpdate">Thêm phiếu trả sách</a>
            </div>
        }
    </div>

    <table class="table data-table" id="myTable">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Mã phiếu trả</th>
                <th scope="col">Ngày tạo</th>
                <th scope="col">Người tạo</th>
                <th scope="col">Ngày tạo</th>
                <th scope="col">Độc giả</th>
                <th scope="col">Ghi chú</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>


