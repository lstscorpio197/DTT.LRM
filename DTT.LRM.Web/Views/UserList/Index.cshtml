@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions
@using DTT.LRM.Authorization
@{
    ViewBag.ActiveMenu = PageNames.UserList; //The menu item will be active for this page.
}

@section scripts
{
    @Html.IncludeScript("~/Views/UserList/Index.js")
}

@{
    var isCanEdit = IsGranted(PermissionNames.Pages_UserList_Update);
}

<div id="table-wrapper">
    <div class="mb-2 d-flex align-items-center justify-content-between">
        <h4>
            Danh sách người dùng
        </h4>
    </div>
    <table class="table data-table" id="myTable" data-iscanedit="@(isCanEdit ? 1 : 0)">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Tài khoản</th>
                <th scope="col">Email</th>
                <th scope="col">Tên người dùng</th>
                <th scope="col">Kích hoạt</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>